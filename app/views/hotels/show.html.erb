<section>
  <div class='container mt-5 pt-5' >
    <div class='row' >
      <div class='col-12 col-sm-8 col-md-6 m-auto'>
        <div class='card border-0 shadow' >
          <div class='card-body'>

              <div>
                <%= image_tag @hotel.hotel_image, class: 'img-fuild w-100' %>
              </div>
              <div >
                  <h1>Hotel Name : <%= @hotel.name %></h1>
              </div>
              <div >
                  <h2> Address : <span> <%= @hotel.address %> </span> </h2>
              </div>
              <div >
                  <h4> Contact_number : <%= @hotel.contact_number %></h4>
              </div>
              <div >
                  <h4> Email : <%= @hotel.email %></h4>
              </div>
              <div >
                  <h4> Description : <%= @hotel.description %></h4>
              </div>
              <br> <br>

              <div >
              <span> <%= link_to 'Back', hotels_path, class: 'btn btn-secondary' %> </span>

                <span> <%= link_to 'Edit Hotel', edit_hotel_path(@hotel), class: 'btn btn-success' %> </span>

                    <span> <%= link_to 'Delete Hotel', hotel_path(@hotel), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: 'btn btn-danger' %> </span>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>