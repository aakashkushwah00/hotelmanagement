<section>
  <div class='container mt-5 pt-5' >
    <div class='row' >
      <div class='col-12 col-sm-8 col-md-6 m-auto'>
        <div class='card border-0 shadow' >
          <div class='card-body'>

              <div >
                  <h1><%= image_tag  @room.room_image %></h1>
              </div>
              <div >
                  <h1>Room Type :<%= @room.room_type %></h1>
              </div>
              <div >
                  <h4>Floor_Number :<%= @room.floor_number %></h4>
              </div>
              <div >
                  <h4>Price :<%= @room.price %></h4>
              </div>
              <div >
                  <h4>Room Capacity :<%= @room.capacity %></h4>
              </div>
              <div >
                  <h4>Room Description : <span> <%= @room.description %> </span> </h4>
              </div>
              <br> <br>

              <div >
                <span> <%= link_to 'Back', hotel_rooms_path, class: 'btn btn-secondary' %> </span>
                
                <span> <%= link_to 'Edit Room', edit_hotel_room_path(@hotel), class: 'btn btn-success' %> </span>

                <span> <%= link_to 'Delete Room',hotel_room_path, data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: 'btn btn-danger'%> </span>

              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>