<div class="container">
  <div class="row">
      <div class="table-responsive">

        <h1 class='mt-5 bg-primary'>Listing Hotels</h1>
          <table class="table table-bordered table-hover table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Contact_Number</th>
                <th>Address</th>
                <th>Description</th>

                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @hotels.each do |hotel| %>
                <tr>
                  <td><%= hotel.name %></td>
                  <td><%= hotel.email %></td>
                  <td><%= hotel.contact_number %></td>
                  <td><%= hotel.address %></td>
                  <td><%= hotel.description %></td>
                  <td><%= link_to 'show', hotel_path(hotel) %></td>
                  <td><%= link_to 'Add Room', hotel_rooms_path(hotel) %></td>
                  <td><%= link_to 'Add Employee', hotel_employees_path(hotel) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

            <%= form_tag import_csv_hotels_path, multipart: true do %>
              <%= file_field_tag :file %>
              <%= submit_tag 'Import CSV' %>

            <% end %> <br> <br>
        
                <%= link_to 'Back', admin_dashboard_index_path, class: 'btn btn-outline-dark' %>
                <%= link_to "Add New Hotel",new_hotel_path, class: 'btn btn-outline-primary' %>
                <%= link_to "downloade-csv", hotels_path(format: :csv),  class: 'btn btn-outline-primary' %>

      </div>
    </div>
  </div>
</div>

