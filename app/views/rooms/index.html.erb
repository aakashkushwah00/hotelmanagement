<div class="container">
  <div class="row">
      <div class="table-responsive">

        <h1>Listing rooms</h1>
          <table class="table table-bordered table-hover table-dark table-striped">
            <thead>
              <tr>
                <th>Room_Type</th>
                <th>Floor_Number</th>
                <th>Price</th>
                <th>Capacity</th>
                <th>Description</th>

                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @rooms.each do |room| %>
                <tr>
                  <td><%= room.room_type %></td>
                  <td><%= room.floor_number %></td>
                  <td><%= room.price %></td>
                  <td><%= room.capacity %></td>
                  <td><%= room.description %></td>

                  <td> <%= link_to 'Show',hotel_room_path(@hotel, room.id), class: 'btn btn-outline-primary' %> </td>

                </tr>
              <% end %>
            </tbody>
            
          </table>

          <%= link_to 'Back', hotels_path, class: 'btn btn-outline-primary'  %>
          <%= link_to 'Add New Room', new_hotel_room_path, class: 'btn btn-outline-primary'  %>
               
      </div>
    </div>
  </div>
</div>

