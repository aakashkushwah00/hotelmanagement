<div class="container">
  <div class="row">
    <%# <div class="col-md-8 col-xs-12"> %>
      <div class="table-responsive">

        <h1>Listing Employee</h1>
          <table class="table table-bordered table-hover table-dark table-striped">
            <thead>
              <tr>
                <th>First_Name</th>
                <th>Last_Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Contact_Number</th>
                <th>Gender</th>
                <th>Salary</th>

                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @employees.each do |employee| %>
                <tr>
                  <td><%= employee.first_name %></td>
                  <td><%= employee.last_name %></td>
                  <td><%= employee.email %></td>
                  <td><%= employee.address %></td>
                  <td><%= employee.contact_number %></td>
                  <td><%= employee.gender %></td>
                  <td><%= employee.salary %></td>

                  <td><%= link_to 'show',hotel_employee_path(@hotel, employee.id), class: 'btn btn-outline-primary' %></td>

                </tr>
              <% end %>
            </tbody>
            
          </table>

          <%= link_to 'Back', hotels_path, class: 'btn btn-outline-dark'  %>
          <%= link_to 'Add New Employee', new_hotel_employee_path(@hotel), class: 'btn btn-outline-primary' %>
               
      </div>
    </div>
  </div>
</div>

